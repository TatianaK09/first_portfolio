body {
    font-family: sans-serif;
    background-color:  #d5f2f7
}
 body {
    font-family: sans-serif;
    background-color:#f5f38a;
}

header{
    margin: 20px;
}

h1{
    text-decoration: none;
    text-align: center;
    background-image: linear-gradient(#f2f3f5, #96C5F7);
    padding: 5px;
    border-radius: 10px;
    color: darkblue
}

.text-big{
    background-image: linear-gradient(#f2f3f5, #96C5F7, blueviolet);
    text-align: center;
    padding: 10px;
    border-radius: 10px;
    color: darkblue
}
.link-header {
    text-decoration: none;
    font-size: 20px;
    color: navy;
    background-image: linear-gradient(#96C5F7,#f2f3f5);
    padding: 20px;
    border-radius: 10px;
}


.link-text:hover{
    color: darkgoldenrod;
}

.link-text:visited{
    color: gray;
}

footer{
    position: fixed;
    right: 0px;
    bottom: 0px;
}
